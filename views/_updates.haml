- updates.each do |update|
  - mine = false; mentioned = false;
  - if !defined?(no_highlight)
    - mine = current_user.nil? ? false : (update.author_id == current_user.author_id)
    - mentioned = current_user.nil? ? false : update.mentioned?(current_user.username)

  .update.hentry{:class => (mentioned ? "mention " : "") + (mine ? "mine " : ""), :id => "update-#{update.id}", "data-id" => update.id, "data-name" => update.username}
    .author.vcard
      .avatar
        %a.url{:href => update.author_url}
          %img.photo{:alt => "avatar", :src => update.avatar_url}/
      %span.fn= update.name
      (<span class="nickname">#{update.username}</span>)
    .entry-content
      != update.to_html

    .entry-info
      %time.published{:pubdate => "pubdate", :datetime => update.created_at.iso8601}
        %a{:href => update.url, :rel => "bookmark"}= update.created_at.ago_in_words

      -unless update.referral.nil?
        .in-reply
          %a{:href => "/updates/#{update.referral_id}"}
            in reply to
            %span.name= update.referral.author.username

    .end-links
      -# when @timeline is true, this is a list on the user's page
      -unless current_user.nil? or (current_user.author_id == update.author_id)
        %a.share{:href => "/?share=#{update.id}"} share
        |
        %a.reply{:href => "/?reply=#{update.id}"} reply

      - if current_user and update.author_id == current_user.author_id
        %form{:method => "post", :action => "/updates/#{update.id}"}
          %input{:type => "hidden", :name => "_method", :value => "delete"}
          %input.remove-update{:type => "submit", :value => "I Regret This"}

- if updates.empty?
  .empty
    There are no updates here yet
